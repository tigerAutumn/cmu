    <artifactId>newex-perpetual-matching</artifactId>
    <name>newex-perpetual-matching</name>
    <description>newex-perpetual撮合系统</description>
    <dependencies>
        <dependency>
            <groupId>cc.newex.dax</groupId>
            <artifactId>newex-market-client</artifactId>
